<div id="clearance" class="container sign-in">
  <h2><%= t(".title") %></h2>


  <%= form_for :session, url: session_path do |form| %>
  <form class="form-horizontal" action="/action_page.php">
  
    <div class="col-sm-10">
      <div type="email" class="form-control" id="email" placeholder="Enter email">      <%= form.label :email %>
      <%= form.text_field :email, type: 'email' %></div>
    </div>

  <div class="form-group">
    <div class="col-sm-10"> 
      <div type="password" class="form-control" id="pwd" placeholder="Enter password">     <%= form.label :password %>
      <%= form.password_field :password %></div>
    </div>
  </div>


  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"><%= form.submit %></button>
      <button type="submit" class="btn btn-warning"><% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, class: 'text-white' %>
      <% end %></button>
      <button type="submit" class="btn btn-danger">      <%= link_to t(".forgot_password"), new_password_path, class: 'text-white' %></button>
    </div>
  </div>

    </div>
  <% end %>

</div>



