<p id="notice"><%= notice %></p>

<div class="container">


  <h1>Articles</h1>
  <% @articles.each do |article| %>
  <div class="card w-75">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
    <div class="btn btn-primary"><%= link_to 'Show', article, class: 'text-white' %></div>
    <div class="btn btn-primary"><%= link_to 'Edit', edit_article_path(article), class: 'text-white' %></div>
    <div class="btn btn-primary"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-white' %></div>
  </div>
</div>
<% end %>









<div class="btn btn-primary"><%= link_to 'New Article', new_article_path, class: 'text-white' %></div>

</div>